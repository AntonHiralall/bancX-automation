{
  "name": "bancxsanitytestplan",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test tests/ui/ --reporter=allure-playwright",
    "test:api": "playwright test tests/api/ --reporter=allure-playwright",
    "test:combined": "playwright test tests/api/combined.api.spec.ts",
    "test:mobile": "playwright test tests/ui/ --project=mobile",
    "test:ui-project": "playwright test --project=ui-tests",
    "test:api-project": "playwright test --project=api-tests",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui-mode": "playwright test --ui",
    "report": "playwright show-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "clean:allure": "powershell -ExecutionPolicy Bypass -File scripts/clean-allure-results.ps1",
    "clean:allure:results": "powershell -ExecutionPolicy Bypass -File scripts/clean-allure-results.ps1 -CleanReports:$false",
    "clean:allure:reports": "powershell -ExecutionPolicy Bypass -File scripts/clean-allure-results.ps1 -CleanResults:$false",
    "test:ui:clean": "npm run clean:allure && npm run test:ui",
    "test:api:clean": "npm run clean:allure && npm run test:api",
    "test:combined:clean": "npm run clean:allure && npm run test:combined"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@playwright/test": "^1.53.1",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "allure-playwright": "^3.3.0",
    "typescript-eslint": "^8.33.1"
  }
}
